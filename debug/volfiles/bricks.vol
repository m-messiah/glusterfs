volume vol-posix1
    type storage/posix
    option directory /gluster/brick1
end-volume

volume vol-posix2
    type storage/posix
    option directory /gluster/brick2
end-volume

volume vol-glupy1
    type features/glupy
    option module-name debug-trace
    subvolumes vol-posix1
end-volume

volume vol-glupy2
    type features/glupy
    option module-name debug-trace
    subvolumes vol-posix2
end-volume


