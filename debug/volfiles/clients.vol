volume node1
  type protocol/client
  option transport-type tcp
  option remote-host muzafarov
  option remote-subvolume brick1
end-volume

volume node2
  type protocol/client
  option transport-type tcp
  option remote-host muzafarov
  option remote-subvolume brick2
end-volume


volume cluster
  type cluster/dht
  subvolumes node1 node2
  option scheduler switch
  option switch.case *remote:node2;*local:node1
end-volume
