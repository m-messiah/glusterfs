volume vol-posix
    type storage/posix
    option directory /gluster/brick1
end-volume

volume vol-glupy
    type features/glupy
    option module-name debug-trace
    subvolumes vol-posix
end-volume

volume brick
    type cluster/dht
    subvolumes vol-glupy
    option scheduler switch
    option switch.case *.brick1:vol-glupy
end-volume
